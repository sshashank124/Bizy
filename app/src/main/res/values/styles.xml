<resources>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/light_blue</item>

        <item name="light_active_color">@color/light_blue</item>
        <item name="active_color">@color/blue</item>
        <item name="dark_active_color">@color/dark_blue</item>

        <item name="checkbox">@drawable/checkbox_blue</item>
        <item name="divider_horizontal">@drawable/divider_horizontal_blue</item>
        <item name="divider_vertical">@drawable/divider_vertical_blue</item>
        <item name="item_background">@drawable/item_background_blue</item>
        <item name="progressbar">@drawable/progressbar_blue</item>

    </style>

